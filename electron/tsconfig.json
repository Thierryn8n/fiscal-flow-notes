{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "../electron-dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "./main.ts",
    "./preload.ts"
  ],
  "exclude": [
    "**/node_modules",
    "../dist",
    "../src"
  ]
} 